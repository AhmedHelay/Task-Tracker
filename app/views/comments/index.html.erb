<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table class = "table table-responsive table-light table-hover table-striped table-bordered">
  <thead class = "thead-light">
    <tr>
      <th> User </th>
      <th> Comment </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= link_to User.find(comment.user_id).fullname , user_path(comment.user_id) %></td>
        <td><%= comment.content %></td>
        <td><%= link_to 'Show', comment ,class: 'btn btn-primary'%>
        <td><%= link_to 'Edit', edit_comment_path(comment) ,class: 'btn btn-secondary'%></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path ,class: 'btn btn-primary' %>
