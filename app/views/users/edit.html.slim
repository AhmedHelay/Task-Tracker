.card.text-dark
  .card-header
    h2 Edit User
  .card-body
    = simple_form_for(@user) do |f|
      = f.error_notification
      .field.form-group
        .form-inputs.my-2
          = f.input :username, required: true, placeholder: @user.username
        .form-inputs.my-2
          = f.input :email, required: true, autofocus: true
        .field.form-group.my-2
          = f.input :password,    required: true, autofocus: true
      .form-actions
        = f.button :submit, "Update", class: 'btn btn-primary mt-2'